<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Menu</h1>
    <div class="col-6 offset-3">
        <form action="/menus" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="menu[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="dish">Dish</label>
                <input class="form-control" type="text" id="dish" name="menu[dish]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="menu[description]"></textarea>
            </div>
        </form>
        <a href="/menus">All Menus</a>
    </div>
</div>