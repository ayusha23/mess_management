

<h1>All Menus</h1>
<div>
    <a href="/menus/new">Add Menu</a>
</div>
<% for (let menu of menus){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=menu.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= menu.title %> </h5>
                <p class="card-text"><%= menu.description %></p>
                <a class="btn btn-primary" href="/menus/<%=menu._id%>">View <%=menu.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>